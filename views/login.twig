{% extends 'layout.twig' %}

{% block body %}
<div class= "container-fluid">
  <div class="row justify-content-md-center">
    <section class="form col-12 col-sm-6 col-md-3">
      
      <form class='form-container' action='/login' method='post'>
        <h1>{{title}}</h1>
          <div class="form-group">
            <div class="col-md-auto">
              <input name='username' placeholder='Username' class="form-control my-4 p-2" required>
            </div>  
          </div>

          <div class="form-group">
            <div class="col-md-auto">
              <input name='password' placeholder='Password' class="form-control my-4 p-2" type='password' required>
            </div>
          </div>

          <div>
          <input type='submit' class="btn1 mt-3 mb-5" value="Submit">
          </div>

          <div class="signup_link">
            Not a member? <a href='/register'>Register here!</a>
          </div>
      </form>
  
    </section>
  </div>
</div>  

{% endblock %}
